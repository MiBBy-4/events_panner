<table class="table">
  <thead>
    <tr>
      <th scope="col">Название</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @event_categories.each do |event_category| %>
      <tr>
        <td><%= event_category.name %></td>
        <td>
          <%= link_to 'Редактировать', edit_event_category_path(event_category), class: 'btn btn-primary' %>
        </td>
        <td>
          <%= button_to 'Удалить', event_category_path(event_category), method: :delete, class: 'btn btn-danger d-inline' %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</table>
<%= link_to 'Добавить', new_event_category_path, class: 'btn btn-primary' %>
