<%= render 'shared/errors', object: event_category %>

<%= form_with model: event_category do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-10">
      <%= f.text_field :name, required: true, placeholder: 'Название', class: 'form-control' %>
    </div>
  </div>
  
  <%= f.submit "Подтвердить", class: 'btn btn-primary' %>
<% end %>
