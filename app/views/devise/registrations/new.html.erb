<div class="container d-flex justify-content-center align-items-center authenticate-container mt-5">
  <div class="authenticate-form-container text-center border rounded py-2 px-5">
    <h2 class="authenticate-method mb-5">Регистрация</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "First name(optional)", class: 'authenticate-field form-control mb-2' %>
      </div>

      <div class="field">
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "Last name(optional)", class: 'authenticate-field form-control mb-2' %>
      </div>

      <div class="field">
        <%= f.text_field :city, autocomplete: "city", placeholder: "City(optional)", class: 'authenticate-field form-control mb-2' %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'authenticate-field form-control mb-2' %>
      </div>

      <div class="mb-3 row">
        <div class="col-sm-10">
          <%= f.collection_select :time_zone, @time_zones, :name, :name, {}, { class: 'form-control' } %>
        </div>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> символов минимум)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: 'authenticate-field form-control mb-2' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: 'authenticate-field form-control' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Регистрация", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
