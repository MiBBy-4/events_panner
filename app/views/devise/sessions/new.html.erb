<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="authenticate-form-container text-center border px-5 py-2 rounded">
    <h2 class="authenticate-method mb-5">Авторизация</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="field mb-2 ">
        <%= f.email_field :email, autocomplete: "email", placeholder: 'email', class: 'authenticate-field form-control' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', class: 'authenticate-field form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-5 mt-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Войти", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
