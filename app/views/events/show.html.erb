<div class="event-page-container">
  <div class="event-container">
    <h1><%= @event.name %></h1>
    <% if @event.description? %>
      <div class="event-description">
        <p>Описание события</p>
        <p><%= @event.description %></p>
      </div>
    <% end %>
    <div class="event-footer">
      <div class="date"><%= @event.formatted_date %></div>
      <div class="category"><%= @event.event_category.name %></div>
    </div>
    <div class="actions">
      <%= link_to 'Редактировать', edit_event_path(@event), class: 'btn btn-primary' %>
      <%= link_to 'Удалить', event_path(@event), data: { turbo_method: :delete, turbo_confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
    </div>
  </div>
  <div class="weather-container">
    <h1>Погода в этот день</h1>
    <p>Солнечно, +22 С, порывистый ветер</p>
  </div>
</div>
