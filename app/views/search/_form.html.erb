<%= search_form_for @query, url: search_path, method: :get do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-10">
      <%= f.search_field :name_i_cont_any, placeholder: 'Поиск по названию', class: 'form-control me-2' %>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-sm-4">
      <%= f.collection_select :event_category_name_i_cont_any, current_user.event_categories, :name, :name, {}, { class: 'form-control' } %>
    </div>
    <%= f.submit 'Поиск!', class: 'btn btn-outline-success col-sm-3' %>
  </div>
<% end %>
